<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tạo khuyến mãi mới"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Nhập giá trị giảm giá -->
    <EditText
        android:id="@+id/et_discount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập giá trị giảm giá (0-100)"
        android:inputType="numberDecimal"
        android:background="@android:drawable/edit_text"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Tiêu đề danh sách sản phẩm -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn sản phẩm để áp dụng khuyến mãi:"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp" />

    <!-- Thông báo khi danh sách trống -->
    <TextView
        android:id="@+id/tv_empty_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Không có sản phẩm nào để áp dụng khuyến mãi"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Danh sách sản phẩm -->
    <ListView
        android:id="@+id/lv_drinks"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />

    <!-- Nút lưu -->
    <Button
        android:id="@+id/btn_save_promotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lưu khuyến mãi"
        android:layout_gravity="center"
        android:backgroundTint="@android:color/holo_blue_light"
        android:padding="12dp"
        android:layout_marginTop="16dp" />

</LinearLayout>