<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_user"
    tools:context=".User_Activity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ic_user"
        app:layout_constraintHorizontal_bias="0.498"
        android:id="@+id/avatarUser"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="580dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/cardview_user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        app:layout_constraintVertical_bias="0.159">

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="100dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:elevation="10dp"
            android:background="@drawable/border_textview"
            android:paddingLeft="30dp"
            android:id="@+id/nameUser"
            android:hint="Tên"
            android:gravity="left|center"
            android:textSize="18sp"
            android:layout_height="50dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:elevation="10dp"
            android:background="@drawable/border_textview"
            android:paddingLeft="30dp"
            android:id="@+id/emailUser"
            android:hint="Email"
            android:gravity="left|center"
            android:textSize="18sp"
            android:layout_height="50dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:elevation="10dp"
            android:background="@drawable/border_textview"
            android:paddingLeft="30dp"
            android:id="@+id/phonenoUser"
            android:hint="Số điện thoại"
            android:gravity="left|center"
            android:textSize="18sp"
            android:layout_height="50dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:background="#c0c0c0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">
            <Button
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:background="@drawable/background_button_user1"
                android:text="Chỉnh sửa"
                android:textColor="#FFFFFF"
                android:id="@+id/btnChung"
                android:layout_gravity="center"
                android:elevation="10dp"
                android:layout_marginLeft="30dp"/>
            <Button
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:background="@drawable/background_button_user1"
                android:text="Đơn hàng"
                android:textColor="#FFFFFF"
                android:id="@+id/btnHDTN"
                android:layout_gravity="center"
                android:elevation="10dp"
                android:layout_marginLeft="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:text="Đổi mật khẩu"
                android:id="@+id/btnChangePassword"
                android:textColor="#ffd500"
                android:background="@drawable/background_button_user"
                android:elevation="10dp"
                android:layout_marginLeft="30dp"/>
            <Button
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:text="Đăng xuất"
                android:id="@+id/btnLogout"
                android:textColor="#ffffff"
                android:background="@drawable/background_button_user2"
                android:elevation="10dp"

                android:layout_marginLeft="50dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>