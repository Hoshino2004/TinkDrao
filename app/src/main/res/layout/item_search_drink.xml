<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    android:layout_marginBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="8dp">

        <!-- Ảnh nước -->
        <ImageView
            android:id="@+id/drinkSearchImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:contentDescription="Drink Image"/>

        <!-- Thông tin nước -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:gravity="center_vertical">

            <!-- Tên nước -->
            <TextView
                android:id="@+id/drinkSearchName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Drink Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Giá gốc -->
                <TextView
                    android:id="@+id/drinkSearchOriginalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$4.00"
                    android:textSize="14sp"
                    android:textColor="#7F8C8D"
                    android:visibility="visible"/>

                <!-- Phần trăm giảm giá -->
                <TextView
                    android:id="@+id/drinkSearchDiscountPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="-25%"
                    android:textSize="14sp"
                    android:textColor="#27AE60"/>
            </LinearLayout>

            <!-- Giá đã giảm -->
            <TextView
                android:id="@+id/drinkSearchDiscountedPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$3.50"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#E74C3C"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>